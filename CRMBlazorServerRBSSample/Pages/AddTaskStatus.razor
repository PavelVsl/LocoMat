@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> D
@page "/add-task-status"

@attribute [Authorize]
@inject Microsoft.Extensions.Localization.IStringLocalizer<AddTaskStatus> L

<PageTitle>@D["AddTaskStatus.AddTaskstatus"]</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save TaskStatus</RadzenAlert>
        <RadzenTemplateForm TItem="CRMBlazorServerRBS.Models.RadzenCRM.TaskStatus" Data="@taskStatus" Visible="@(taskStatus != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="@D["TaskStatus.Name"]" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@taskStatus.Name" Name="Name" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="@D["Button.Save"]" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="@D["Button.Save"]" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

