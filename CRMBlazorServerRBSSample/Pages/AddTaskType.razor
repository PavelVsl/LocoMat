@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> D
@page "/add-task-type"

@attribute [Authorize]
@inject Microsoft.Extensions.Localization.IStringLocalizer<AddTaskType> L

<PageTitle>@D["AddTaskType.AddTasktype"]</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save TaskType</RadzenAlert>
        <RadzenTemplateForm TItem="CRMBlazorServerRBS.Models.RadzenCRM.TaskType" Data="@taskType" Visible="@(taskType != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="@D["TaskType.Name"]" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@taskType.Name" Name="Name" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="@D["Button.Save"]" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="@D["Button.Save"]" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

