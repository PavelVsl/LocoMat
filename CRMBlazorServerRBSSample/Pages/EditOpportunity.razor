@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> D
@page "/edit-opportunity"

@attribute [Authorize]
@inject Microsoft.Extensions.Localization.IStringLocalizer<EditOpportunity> L

<PageTitle>@D["EditOpportunity.EditOpportunity"]</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Opportunity</RadzenAlert>
        <RadzenTemplateForm TItem="CRMBlazorServerRBS.Models.RadzenCRM.Opportunity" Data="@opportunity" Visible="@(opportunity != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="@D["Opportunity.Amount"]" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@opportunity.Amount" Name="Amount" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Amount" Text="@D["Opportunity.Amount.RequiredValidator"]" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="@D["Opportunity.Name"]" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@opportunity.Name" Name="Name" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Name" Text="@D["Opportunity.Name.RequiredValidator"]" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="@D["Opportunity.CloseDate"]" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@opportunity.CloseDate" Name="CloseDate" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="CloseDate" Text="@D["Opportunity.CloseDate.RequiredValidator"]" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="@D["Opportunity.Contact"]" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@contactsForContactId" TextProperty="Email" ValueProperty="Id" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@opportunity.ContactId" Name="ContactId"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="@D["Opportunity.OpportunityStatus"]" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@opportunityStatusesForStatusId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@opportunity.StatusId" Name="StatusId"
                           />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="@D["Button.Save"]" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="@D["Button.Save"]" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

